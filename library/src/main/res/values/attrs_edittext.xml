<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SpilttedEditText">

        <!--分隔符，默认用空格分隔-->
        <attr name="separator" format="string" />
        <!--允许输入的字符-->
        <attr name="allowed_input" format="string" />
        <!--分隔长度-->
        <attr name="sep_len" format="integer" />

    </declare-styleable>

    <declare-styleable name="DecimalEditText">

        <!--小数点位数-->
        <attr name="decimal_digits" format="integer"/>
        <!--允许输入的最大值-->
        <attr name="decimal_max_value" format="float"/>

    </declare-styleable>

</resources>